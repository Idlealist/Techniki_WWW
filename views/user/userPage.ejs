<div class="container">
    <h1 class="mt-4">Welcome back, <%= username %>!</h1>
    <form id="createForm" class="mt-4 mb-3" action="/files" method="POST">
        <label for="title" class="form-label">Create new file:</label>
        <input type="text" class="form-control-sm" id="title" placeholder="Title" name="title" required>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-file-earmark-plus"></i> Create
        </button>
    </form>
    <a href="/files" class="btn btn-primary btn-block mb-3">
        <i class="bi bi-files-alt"></i> Go to Files
    </a>
    <a href="/user/<%= username %>/settings" class="btn btn-secondary btn-block mb-3"> <i class="bi bi-gear-fill"></i>
        Settings</a>

    <form action="/user/logout" method="POST">
        <button type="submit" class="btn btn-danger btn-block">
            <i class="bi bi-box-arrow-left"></i> Logout
        </button>
    </form>

</div>
<script>
    function toggleSettings() {
        const settings = document.getElementById('settings');
        if (settings.style.visibility === 'hidden') {
            settings.style.visibility = 'visible';
        } else {
            settings.style.visibility = 'hidden';
        }
    }

    function confirmDelete() {
        const confirmation = confirm("Last warning!!! This action will permanently delete your account with all associated files, do you still wish to proceed?");
        if (confirmation) {
            const form = document.getElementById('deleteForm');
            form.submit();
        }
    }
</script>
